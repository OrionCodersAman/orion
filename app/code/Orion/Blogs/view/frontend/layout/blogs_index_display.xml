<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <css src="Magento_Customer/css/customer_account.css" />
         <title>My Blogs</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My Blogs</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Orion\Blogs\Block\Display" name="Orion.Blogs" template="Orion_Blogs::showblogs.phtml" />
        </referenceContainer>
    </body>
</page>